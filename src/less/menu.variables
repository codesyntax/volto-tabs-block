/*******************************
            Tabs menu
*******************************/

@menuMarginButton: 0;

/* Menu title */
@menuTitleFontSize: 24px;
@menuTitleFontWeight: normal;
@menuTitleColor: #013C60;
@menuTitleHoverColor: #013C60;
@menuTitleHoverBackground: none;

/* Tab Icons */
@tabImageSmallSize:  48px;
@tabImageMediumSize: 64px;
@tabImageLargeSize: 80px;
@tabIconSmallSize:  48px;
@tabIconMediumSize: 64px;
@tabIconLargeSize: 80px;

/* Menu description */
@menuDescriptionColor: #636363;

/* Menu item */
@menuItemCountDisplay: none;
@secondaryPointingInvertedActiveBorderColor: var(--inverted-secondary-border-color, @pink);
@menuItemBackgroundColor: var(--inverted-bg-color, #C7D5D8);
@menuItemActiveColor: var(--item-active-color, rgba(0, 0, 0, 0.05));
@menuItemInvertedTextColor: var(--inverted-text-color, @textColor);
@menuItemInvertedActiveTextColor: var(--inverted-active-text-color, @textColor);
@menuItemInvertedActiveBackgroundColor: var(--inverted-active-bg-color, rgba(0, 0, 0, 0.1));
@menuItemHoverTextColor:var(--inverted-hover-text-color, @textColor);


@accordionMenuItemBackground: #F3F4F5;  /* not used */
@accordionTabBackground: transparent;

/* Theme variables */
@primaryColor         : #004B7F;
@secondaryColor       : #007B6C;
@tertiaryColor        : #3D5265;
